<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <Configurations>Debug;Release;Release-xml</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Fonts\Boogaloo.ttf" />
    <None Remove="Fonts\Handlee.ttf" />
    <None Remove="Fonts\Kaushan Script.ttf" />
    <None Remove="Fonts\Pinyon Script.ttf" />
    <None Remove="SamplesList\SamplesList.xml" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Fonts\Boogaloo.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Fonts\Handlee.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Fonts\Kaushan Script.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Fonts\Pinyon Script.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="SamplesList\SamplesList.xml" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="SampleBrowser.Core" Version="18.1.0.52" />
    <PackageReference Include="Syncfusion.Xamarin.Buttons" Version="18.1.0.52" />
    <PackageReference Include="Syncfusion.Xamarin.Core" Version="18.1.0.52" />
    <PackageReference Include="Syncfusion.Xamarin.DataSource" Version="18.1.0.52" />
    <PackageReference Include="Syncfusion.Xamarin.GridCommon" Version="18.1.0.52" />
    <PackageReference Include="Syncfusion.Xamarin.SfComboBox" Version="18.1.0.52" />
    <PackageReference Include="Syncfusion.Xamarin.SfListView" Version="18.1.0.52" />
    <PackageReference Include="Syncfusion.Xamarin.SfPicker" Version="18.1.0.52" />
    <PackageReference Include="Syncfusion.Xamarin.SfRichTextEditor" Version="18.1.0.52" />
    <PackageReference Include="Xamarin.Forms" Version="3.6.0.344457" />
  </ItemGroup>
   
  <ItemGroup>
    <EmbeddedResource Update="Samples\MailPage\MailPage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>

  <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />
</Project>